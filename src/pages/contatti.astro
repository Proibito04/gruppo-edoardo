---
import Footer from "../componenti/footer.astro";
import Navbar from "../componenti/navbar/navbar.astro";
import type { Language, UI } from "../i18n/ui";
import Layout from "../layouts/Layout.astro";
import { useTranslations } from "../i18n/utilis";

interface Props {
  lang: Language;
}
const { lang = "it" as Language } = Astro.props;

const ui: UI = {
  it: {
    title: "I nostri contatti",
    subtitle: "Vienici a trovare",
    callToAction:
      "Siamo profondamente impegnati a supportare i nostri clienti nella ricerca della casa ideale, quella che soddisfi appieno i loro desideri. Siamo sempre disponibili per rispondere a qualsiasi domanda o per fornire informazioni aggiuntive che possano facilitare questo importante processo. Non esitate a contattarci; sar√† nostro grande piacere assistervi in ogni aspetto della vostra ricerca."
  },
  en: {
    title: "Get in touch",
    subtitle: "Come visit us",
    callToAction:
      "We are deeply committed to supporting our clients in finding their ideal home, one that fully meets their desires. We are always available to answer any questions or provide additional information that may facilitate this important process. Please do not hesitate to contact us; it will be our great pleasure to assist you in every aspect of your search."
  }
};

const t = useTranslations(lang, ui);
---

<Layout
  title={t("title")}
  descrizione="Contatta Edoardo Immobiliare oggi per avere accesso ai migliori servizi immobiliari e a un team di esperti pronto ad aiutarti. Chiamaci al numero 011 301 7943, inviaci un'email a info@gruppoedoardo.it o visita il nostro sito web per ulteriori informazioni sui nostri servizi."
  {lang}
>
  <Navbar {lang} />
  <div class="p-10 md:px-20">
    <h1 class="text-4xl">{t("title")}</h1>
    <span class="font-medium">{t("subtitle")}</span>

    <div class="mt-5 flex flex-col gap-3 md:flex-row">
      <div class="flex flex-col gap-3 md:w-[50%]">
        <!-- Telefono -->
        <div class="flex items-center align-middle">
          <span class="mr-5 flex h-full w-5">
