---
import Immagine from "../../componenti/immagine.astro";
import type { UI, Language } from "../../i18n/ui";
import { useTranslations } from "../../i18n/utilis";
// Aggiungi le traduzioni nel dizionario `ui` per italiano e inglese
const ui: UI = {
  it: {
    title: "Gruppo Edoardo",
    description: "Scegliere la propria casa Ã¨ un momento importante della vita, noi siamo qui per rendere questo viaggio semplice e piacevole. Con il nostro team di esperti e un approccio personalizzato, vi garantiamo un'esperienza di acquisto immobiliare unica e rilassante",
    callUs: "Chiamaci"
  },
  en: {
    description: "Choosing your home is an important moment in life, and we are here to make this journey simple and enjoyable. With our team of experts and a personalized approach, we guarantee you a unique and relaxing real estate purchasing experience",
    callUs: "Call Us"
  }
}

interface Props {
  lang: Language;
}

const { lang = "it" } = Astro.props;
const t = useTranslations(lang, ui);
---

<div class="relative h-[400px] w-full md:h-[60vh]">
  <div class="absolute h-full w-full overflow-hidden">
    <Immagine alt={t("happyFamilyBackground")} name="cover" />
  </div>
  <div class="absolute z-10 h-full w-full bg-white bg-opacity-80">
    <div class="flex h-full flex-col justify-center gap-4 p-10 md:px-20 lg:w-[60%]">
      <h1 class="text-4xl font-medium">{t("title")}</h1>
      <p>
        {t("description")}
      </p>
      <div
        class="w-fit cursor-pointer rounded border bg-blue-600 p-1 px-7 py-1.5 text-white hover:bg-blue-700 active:bg-blue-700"
      >
        {t("callUs")}
      </div>
    </div>
  </div>
</div>
